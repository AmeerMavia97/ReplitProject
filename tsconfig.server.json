{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "rootDir": "."
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": ["client", "node_modules", "dist"]
}
